{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["es5", "es6", "dom", "es2017"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/tests/**/*", "**/*.spec.ts"]
}
